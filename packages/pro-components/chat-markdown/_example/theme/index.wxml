<view class="demo-container">
    <view class="theme-switch">
        <text>主题切换：</text>
        <button bindtap="toggleTheme" class="theme-btn">
            {{currentTheme === 'light' ? '切换到暗色' : '切换到亮色'}}
        </button>
    </view>

    <view class="markdown-container">
        <t-chat-markdown content="{{markdownContent}}" theme="{{currentTheme}}" fontSize="{{fontSize}}"
            lineHeight="{{lineHeight}}" />
    </view>

    <view class="controls">
        <view class="control-item">
            <text>字体大小：</text>
            <picker bindchange="onFontSizeChange" value="{{fontSizeIndex}}" range="{{fontSizeOptions}}">
                <view class="picker">{{fontSizeOptions[fontSizeIndex]}}</view>
            </picker>
        </view>

        <view class="control-item">
            <text>行高：</text>
            <picker bindchange="onLineHeightChange" value="{{lineHeightIndex}}" range="{{lineHeightOptions}}">
                <view class="picker">{{lineHeightOptions[lineHeightIndex]}}</view>
            </picker>
        </view>
    </view>
</view>
