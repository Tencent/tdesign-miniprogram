<view class="t-markdown-table-container">
  <view class="t-markdown-table">
    <view class="t-markdown-thead">
      <view class="t-markdown-tr">
        <block wx:for="{{node.header}}" wx:for-item="th" wx:for-index="j" wx:key="j">
          <view class="t-markdown-th" style="{{('text-align:'+node.align[j]||'left'+';')}}">
            <chat-markdown-node nodes="{{th.tokens}}"></chat-markdown-node>
          </view>
        </block>
      </view>
    </view>
    <view class="t-markdown-tbody">
      <block wx:for="{{node.rows}}" wx:for-item="row" wx:for-index="k" wx:key="k">
        <view class="t-markdown-tr">
          <block wx:for="{{row}}" wx:for-item="cell" wx:for-index="l" wx:key="l">
            <view class="t-markdown-td" style="{{('text-align:'+node.align[l]||'left'+';')}}">
              <chat-markdown-node nodes="{{cell.tokens}}" bind:__l="__l"></chat-markdown-node>
            </view>
          </block>
        </view>
      </block>
    </view>
  </view>
</view>
