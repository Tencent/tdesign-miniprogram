<view class="{{[COMPONENT_NAME]}}">
  <view class="{{[COMPONENT_NAME+'__inner',COMPONENT_NAME+'__inner__'+layout]}}">
    <view class="{{[COMPONENT_NAME+'__hd']}}">
      <block wx:if="{{status==='error'}}">
        <view class="icon-close"></view>
      </block>
      <block wx:else>
        <t-chat-loading animation="{{animation}}"></t-chat-loading>
      </block>
      <view class="{{[COMPONENT_NAME+'__hd__txt']}}">{{content.title||"正在思考中..."}}</view>
      <view
        data-event-opts="{{[['tap',[['handleCollapse',['$event']]]]]}}"
        class="{{[COMPONENT_NAME+'__hd__btn',[(!localCollapsed)?'close':'']]}}"
        bindtap="__e"
      ></view>
    </view>
    <view
      hidden="{{!(!localCollapsed)}}"
      class="{{[COMPONENT_NAME+'__bd',COMPONENT_NAME+'__bd__'+layout]}}"
      style="{{(contentStyle)}}"
      >{{''+(content.text||"")+''}}</view
    >
  </view>
</view>
