<view class="demo-container">
    <view class="theme-switch">
        <text>主题切换：</text>
        <button bindtap="toggleTheme" class="theme-btn">
            切换到{{currentTheme === 'light' ? '暗色' : '亮色'}}主题
        </button>
    </view>

    <view class="thinking-container">
        <t-chat-thinking thinking="{{thinking}}" theme="{{currentTheme}}" animation="{{animation}}"
            bind:stop="onStop" />
    </view>

    <view class="controls">
        <view class="control-item">
            <text>动画效果：</text>
            <picker bindchange="onAnimationChange" value="{{animationIndex}}" range="{{animationOptions}}">
                <view class="picker">{{animationOptions[animationIndex]}}</view>
            </picker>
        </view>

        <view class="control-item">
            <text>思考状态：</text>
            <button bindtap="toggleThinking" class="toggle-btn">
                {{thinking ? '停止' : '开始'}}
            </button>
        </view>
    </view>
</view>
