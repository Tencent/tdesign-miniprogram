<view class="demo-container">
    <view class="layout-switch">
        <text>布局切换：</text>
        <button bindtap="toggleLayout" class="layout-btn">
            切换到{{currentLayout === 'grid' ? '列表' : '网格'}}布局
        </button>
    </view>

    <view class="attachments-container">
        <t-chat-attachments attachments="{{attachments}}" layout="{{currentLayout}}" maxCount="{{maxCount}}"
            maxSize="{{maxSize}}" uploadText="{{uploadText}}" bind:change="onAttachmentsChange" bind:upload="onUpload"
            bind:delete="onDelete" />
    </view>

    <view class="controls">
        <view class="control-item">
            <text>最大数量：</text>
            <picker bindchange="onMaxCountChange" value="{{maxCountIndex}}" range="{{maxCountOptions}}">
                <view class="picker">{{maxCountOptions[maxCountIndex]}}</view>
            </picker>
        </view>

        <view class="control-item">
            <text>最大大小：</text>
            <picker bindchange="onMaxSizeChange" value="{{maxSizeIndex}}" range="{{maxSizeOptions}}">
                <view class="picker">{{maxSizeOptions[maxSizeIndex]}}</view>
            </picker>
        </view>

        <view class="control-item">
            <text>上传文本：</text>
            <input class="text-input" value="{{uploadText}}" placeholder="输入上传按钮文本" bindinput="onUploadTextChange" />
        </view>
    </view>
</view>
