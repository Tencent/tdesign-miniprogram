.demo-container {
  padding: 32rpx;
  background-color: #f8f9fa;
}

.demo-section {
  margin-bottom: 48rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.demo-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.demo-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

/* 控制面板 */
.control-panel {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.control-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.control-item:last-child {
  margin-bottom: 0;
}

.control-label {
  font-size: 28rpx;
  color: #333;
}

/* 聊天发送器包装器 */
.chat-sender-wrapper {
  margin-bottom: 32rpx;
  /* border: 2rpx solid #e5e5e5; */
  border-radius: 8rpx;
  overflow: hidden;
}

/* 状态面板 */
.status-panel {
  padding: 24rpx;
  background: #f0f9ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.status-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.status-item:last-child {
  margin-bottom: 0;
}

.status-label {
  font-size: 26rpx;
  color: #666;
}

.status-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 功能说明 */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.feature-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-left: 20rpx;
}

.demo-footer-prefix{
  display: flex;
  align-items: center;
}

.deep-think-block{
  width: 280rpx;
  height: 64rpx;
  border-radius: 200rpx;
  border: 2rpx solid rgba(220, 220, 220, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(0, 0, 0, 0.9);
  margin-right: 16rpx;
}

.deep-think-text{
  margin-left: 8rpx;
}

.net-search-block{
  width: 64rpx;
  height: 64rpx;
  border: 2rpx solid rgba(220, 220, 220, 1);
  border-radius: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.active{
  border-color: rgba(217, 225, 255, 1);
  color: rgba(0, 82, 217, 1);
  background-color: rgba(242, 243, 255, 1);
}
