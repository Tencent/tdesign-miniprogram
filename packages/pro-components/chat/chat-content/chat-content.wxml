<wxs src="../../../components/common/utils.wxs" module="_" />
<view class="class {{[COMPONENT_NAME+'__text']}}" style="{{_._style([style, customStyle])}}">
  <block wx:if="{{content.type === 'text'}}">
    <view class="{{[COMPONENT_NAME+'__text__'+role]}}">
      <view class="_pre"><rich-text nodes="{{textInfo}}"></rich-text></view>
    </view>
  </block>
  <block wx:else>
    <view class="{{[COMPONENT_NAME+'__text__assistant']}}">
      <!-- 使用t-chat-markdown组件渲染Markdown内容 -->
      <t-chat-markdown content="{{textInfo}}"></t-chat-markdown>
    </view>
  </block>
</view>
