<wxs src="../../../components/common/utils.wxs" module="_" />

<view class="class {{classPrefix}}" style="{{_._style([style, customStyle])}}">
  <block wx:if="{{content.type === 'text'}}">
    <view class="{{classPrefix}}__{{role}}">
      <view class="_pre">
        <rich-text nodes="{{textInfo}}" />
      </view>
    </view>
  </block>
  <block wx:else>
    <view class="{{classPrefix}}__assistant">
      <t-chat-markdown content="{{textInfo}}"></t-chat-markdown>
    </view>
  </block>
</view>
