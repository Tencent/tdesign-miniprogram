<view class="chat-example">
  <!-- 附件消息 -->
  <view class="chat-example-block">
    <t-chat-message
      content="{{pic1.content}}"
      role="{{pic1.role}}"
      chatContentProps="{{chatContentProps}}"
    ></t-chat-message>
  </view>
  <view class="chat-example-block">
    <t-chat-message
      content="{{pic2.content}}"
      role="{{pic2.role}}"
      chatContentProps="{{chatContentProps}}"
    ></t-chat-message>
  </view>
  <view class="chat-example-block">
    <t-chat-message
      content="{{pic3.content}}"
      role="{{pic3.role}}"
      placement="right"
      chatContentProps="{{chatContentProps}}"
    ></t-chat-message>
  </view>
  <view class="chat-example-block">
    <t-chat-message
      content="{{fileMessage.content}}"
      role="{{fileMessage.role}}"
      chatContentProps="{{chatContentProps}}"
    ></t-chat-message>
  </view>
  <view class="chat-example-block">
    <t-chat-message
      content="{{fileMessage.content}}"
      role="{{fileMessage.role}}"
      placement="right"
      chatContentProps="{{chatContentProps}}"
    ></t-chat-message>
  </view>
  <!-- 思考过程消息 -->
  <view class="chat-example-block">
    <t-chat-message
      content="{{aiMessage.content}}"
      role="{{aiMessage.role}}"
      status="{{aiMessage.status}}"
      variant="text"
    >
      <t-chat-actionbar slot="actionbar" />
    </t-chat-message>
  </view>
</view>
