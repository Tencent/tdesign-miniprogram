<view class="{{classPrefix}}-block">
  <!-- 代码语言标签 -->
  <view class="{{classPrefix}}-header" wx:if="{{node.lang}}">
    <text class="{{classPrefix}}-lang">{{node.lang}}</text>
  </view>

  <!-- 代码内容区域 -->
  <scroll-view class="{{classPrefix}}-content" scroll-x="{{true}}">
    <text class="{{classPrefix}}-text" decode="{{true}}">{{node.text}}</text>
  </scroll-view>
</view>
