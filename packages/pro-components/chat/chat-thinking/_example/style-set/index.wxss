.config-content {
  margin: 0 32rpx 32rpx;
}

.title {
  font-size: 32rpx;
}

.box {
  padding: 16rpx 0;
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
  gap: 12rpx;
  box-sizing: border-box;
}

.radio-box {
  padding: 0;
  margin: 0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.layout-content,
.animation-content {
  display: flex;
  align-items: center;

  --td-radio-bg-color: transparent;
  --td-radio-icon-size: 40rpx;
}

.chat-example-block {
  background-color: var(--td-bg-color-container);
  padding: 32rpx;
}
