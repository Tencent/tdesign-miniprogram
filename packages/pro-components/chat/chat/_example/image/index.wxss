.chat-box {
  padding-top: 32rpx;
  box-sizing: border-box;
}

.t-chat__list {
  padding: 0 0 0 32rpx;
  box-sizing: border-box;
}

.t-chat__inner {
  padding-right: 32rpx;
}

.image-container {
  padding: 16rpx 16rpx 0 0;
  width: 600rpx;
  overflow-x: auto;
}

.image-list {
  display: flex;
  gap: 16rpx;
  flex-wrap: nowrap;
}

.image-list image {
  border-radius: 12rpx;
  flex-shrink: 0;
}

.image-chat .assistant,
.image-chat .assistant .t-chat__detail {
  width: 100%;
}
