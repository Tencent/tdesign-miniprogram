<t-toast id="t-toast" />
<view class="container">
  <label class="copy-mode-switch">
    <checkbox-group class="checkbox-group" bindchange="handleCopyModeChange">
      <checkbox value="markdown" checked="{{isMarkdownMode}}" />
      <text>使用Markdown复制模式</text>
    </checkbox-group>
  </label>
  <t-chat-actionbar content="{{content}}" copyMode="{{currentCopyMode}}" bind:handleAction="handleAction" />
</view>