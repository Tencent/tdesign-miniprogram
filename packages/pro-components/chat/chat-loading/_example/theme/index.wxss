.demo-container {
  padding: 32rpx 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.theme-switch {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.theme-btn {
  margin-left: 16rpx;
  padding: 12rpx 24rpx;
  background-color: #0052d9;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.loading-container {
  margin-bottom: 32rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.controls {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.control-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.control-item:last-child {
  margin-bottom: 0;
}

.control-item text {
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 120rpx;
}

.picker {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e7e7e7;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 120rpx;
  text-align: center;
}

.text-input {
  flex: 1;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e7e7e7;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.toggle-btn {
  padding: 12rpx 24rpx;
  background-color: #0052d9;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}
