<wxs src="../common/utils.wxs" module="_" />
<view class="{{[COMPONENT_NAME]}}" style="{{_._style([style, customStyle])}}">
  <!-- 动态加载动画 -->
  <view class="{{COMPONENT_NAME + '__icon-container'}}">
    <block wx:if="{{animation==='moving'}}">
      <view class="{{COMPONENT_NAME+'__moving'}}">
        <view class="{{COMPONENT_NAME+'__moving--top'}}" />
        <view class="{{COMPONENT_NAME+'__moving--left'}}" />
        <view class="{{COMPONENT_NAME+'__moving--right'}}" />
      </view>
    </block>

    <block wx:if="{{animation==='gradient'}}">
      <view class="{{COMPONENT_NAME + '__gradient'}}" />
    </block>

    <block class="{{COMPONENT_NAME + '__circle'}}" wx:if="{{animation==='circle'}}">
      <t-loading theme="circular" size="28rpx" />
    </block>

    <block wx:if="{{animation==='skeleton'}}">
      <view class="{{COMPONENT_NAME + '__skeleton'}}" style="width: 100%;">
        <t-skeleton rowCol="{{[1, 1, 1, {width: '80%'}]}}" theme="paragraph" animation="gradient" loading></t-skeleton>
      </view>
    </block>
  </view>

  <!-- 文本内容 -->
  <view class="{{[COMPONENT_NAME+'__text']}}">{{text}}</view>
</view>