<wxs src="../../../components/common/utils.wxs" module="_" />

<view class="class {{[classPrefix]}}" style="{{_._style([style, customStyle])}}">
  <!-- 动态加载动画 -->
  <view class="{{classPrefix + '__icon-container'}}" wx:if="{{animation !== 'skeleton'}}">
    <block wx:if="{{animation==='moving'}}">
      <view class="{{classPrefix+'__moving'}}">
        <view class="{{classPrefix+'__moving--top'}}" />
        <view class="{{classPrefix+'__moving--left'}}" />
        <view class="{{classPrefix+'__moving--right'}}" />
      </view>
    </block>

    <block wx:if="{{animation==='gradient'}}">
      <view class="{{classPrefix + '__gradient'}}" />
    </block>

    <view class="{{classPrefix + '__dots'}}" wx:if="{{animation==='dots'}}">
      <t-loading theme="dots" size="60rpx" />
    </view>
  </view>
  <block wx:if="{{animation==='skeleton'}}" style="width: 100%">
    <view class="{{classPrefix + '__skeleton'}}" style="width: 100%">
      <t-skeleton rowCol="{{[1, 1, 1, {width: '80%'}]}}" theme="paragraph" animation="gradient" loading></t-skeleton>
    </view>
  </block>
  <!-- 文本内容 -->
  <view class="{{[classPrefix+'__text']}}">{{text}}</view>
</view>
