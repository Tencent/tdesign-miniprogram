.box {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.form {
}
.upload {
  width: 100%;
}

.textarea {
  height: 200rpx;
  width: 100%;
  --textarea-vertical-padding: 0;
  --td-textarea-horizontal-padding: 0;
}
page .textarea .t-textarea {
  padding: 0 !important;
}

.button-group {
  background-color: #fff;
  box-sizing: border-box;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  border-bottom: 1rpx solid #e7e7e7;
}

.button-group .t-button {
  height: 80rpx;
  flex: 1;
}

.button-group .t-button:not(:last-child) {
  margin-right: 32rpx;
}
