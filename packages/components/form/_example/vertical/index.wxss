.box {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.textarea {
  height: 200rpx;
  width: 100%;
}

.button-group {
  background-color: #fff;
  box-sizing: border-box;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  border-bottom: 1rpx solid #e7e7e7;
}
.upload {
  width: 100%;
}

.button-group .t-button {
  height: 64rpx;
  flex: 1;
}

.button-group .t-button:not(:last-child) {
  margin-right: 32rpx;
}
