.container {
  display: flex;
  flex-direction: column;
}

.button-group {
  width: 100%;
  display: flex;
  padding: 0;
  border: 1px solid var(--td-component-border);
  border-radius: 6px;
  margin-bottom: 16px;
  overflow: hidden;
}

.line {
  height: auto;
  width: 1px;
  background-color: var(--td-component-border);
}

.button {
  flex: 1;
  --td-button-border-radius: 0px;
}

.qrcode-container {
  display: flex;
  height: 320px;
  padding: 20px 0;
  justify-content: center;
  align-items: center;
  align-self: stretch;
  background: var(--td-bg-color-secondarycontainer);
}
