<view class="qrcode-status">
  <block wx:if="{{customRender}}">
    <slot name="statusRender" 
      status="{{status}}" 
      onRefresh="handleRefresh"
      class="statusSlot">
    </slot>
  </block>

  <block wx:else>
    <view wx:if="{{status === 'expired'}}" 
      class="{{classPrefix}}-expired">
      <view class="{{classPrefix}}-expired__text">
        {{locale.expiredText}}
      </view>
      <view 
        class="{{classPrefix}}-expired__button" 
        bindtap="handleRefresh">
        <t-icon name="refresh" size="24rpx" />
        <view>{{locale.refreshText}} </view>
      </view>
    </view>

    <view wx:elif="{{status === 'loading'}}" class="loading-container">
      <t-loading>
      </t-loading>
    </view>

    <view wx:elif="{{status === 'scanned'}}" class="{{classPrefix}}-scanned">
      <t-icon name="check-circle-filled" size="24rpx" color="#2BA471"/>
      <view> 
        {{locale.scannedText}} 
      </view>
    </view>

    <view wx:elif="{{status === 'active'}}">
    </view>
  </block>
</view>