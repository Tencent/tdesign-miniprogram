.radio-container {
  margin-bottom: 40rpx;
}

.horizontal-radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}

.radio-label {
  display: flex;
  align-items: center;
}

.radio-text {
  margin-left: 8rpx;
}

.qrcode-expired {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qrcode-expired__wrapper,
.qrcode-scanned__wrapper {
  display: flex;
  align-items: center;
}

.qrcode-expired__button {
  display: flex;
  align-items: center;
  color: #0052d9;
}

.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scanned-text {
  font-size: 28rpx;
  line-height: 44rpx;
  margin-left: 12rpx;
}

.qrcode-expired__text2 {
  margin-left: 4px;
}
