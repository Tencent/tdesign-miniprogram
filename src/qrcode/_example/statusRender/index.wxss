.radio-container {
  margin-bottom: 40rpx;
}

.horizontal-radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}

.radio-label {
  display: flex;
  align-items: center;
}

.radio-text {
  margin-left: 8rpx;
}

.qrcode-expired {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qrcode-expired__text,
.qrcode-scanned {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.qrcode-expired__button {
  display: flex;
  align-items: center;
  color: #576b95;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
}
