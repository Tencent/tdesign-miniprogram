<view class="t-qrcode {{borderless ? 't-qrcode--borderless' : 't-qrcode--bordered'}}">
  <qrcode-canvas
    value="{{value}}"
    level="{{level}}"
    color="{{color}}" 
    bgColor="{{bgColor}}"
    icon="{{icon}}"
    bind:drawError="handleDrawError"
    bind:drawCompleted="handleDrawCompleted">
    
  </qrcode-canvas>

  <block wx:if="{{showMask && canvasReady}}">
      <qrcode-status 
        status="{{status}}"
        bind:onRefresh="handleRefresh"
        statusRender="{{statusRender}}">
        <slot name="statusRender">
        
        </slot>
      </qrcode-status>
  </block>
</view>