.main-title {
  margin: 32rpx;
  display: inline-block;
}

.title-major {
  font-size: 48rpx;
  font-weight: 600;
  line-height: 72rpx;
}

.title-sub {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 48rpx;
  margin-top: 8rpx;
}

.action {
  margin: 64rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 64rpx;
}

.content {
  width: 480rpx;
}

.content .icon {
  font-weight: 700;
  width: 64rpx;
}

.content .text {
  margin-top: 32rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: left;
  line-height: 48rpx;
}

.content .footer {
  text-align: right;
  margin-top: 32rpx;
}

.content .footer .guide-demo-button + .guide-demo-button {
  margin-left: 24rpx;
}
