<view class="{{classPrefix}}__status">
  <block wx:if="{{statusRender}}">
    <slot name="statusRender" status="{{status}}"> </slot>
  </block>

  <block wx:else>
    <view wx:if="{{status === 'expired'}}" class="{{classPrefix}}-expired">
      <view class="{{classPrefix}}-expired__text"> {{locale.expiredText}} </view>
      <view class="{{classPrefix}}-expired__button" bindtap="handleRefresh">
        <t-icon name="refresh" size="36rpx" />
        <view class="{{classPrefix}}-expired__text2">{{locale.refreshText}} </view>
      </view>
    </view>

    <view wx:elif="{{status === 'loading'}}" class="{{classPrefix}}-loading-container">
      <t-loading size="64rpx" />
    </view>

    <view wx:elif="{{status === 'scanned'}}" class="{{classPrefix}}-scanned">
      <t-icon name="check-circle-filled" size="44rpx" color="#2BA471" />
      <view class="{{classPrefix}}-scanned__text"> {{locale.scannedText}} </view>
    </view>
  </block>
</view>
