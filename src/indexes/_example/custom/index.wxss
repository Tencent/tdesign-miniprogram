.capsule {
  margin: 0 8px;
  height: 30px;
  border-radius: 15px;
  background-color: var(--td-bg-color-secondarycontainer, #f3f3f3);
  padding-left: 32rpx;
  display: flex;
  align-items: center;
  font-size: 14px;
  box-sizing: border-box;
}

.capsule--active {
  border: 1px solid var(--td-border-level-1-color, #e7e7e7);
}

.wrapper {
  padding-top: 8px;
  height: 100%;
}

.indexes,
.capsule--active,
.anchor-wrapper {
  background: var(--td-bg-color-container, #ffffff);
}
