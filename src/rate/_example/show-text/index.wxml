<view class="demo-rate">
  <view class="demo-rate__title">请点击评分</view>
  <!-- 自定义带描述评分，设置属性：texts -->
  <t-rate
    value="{{value[0]}}"
    data-index="{{0}}"
    bind:change="onChange"
    showText="{{true}}"
    texts="{{texts}}"
    variant="filled"
    size="{{16}}"
  />
</view>
<view class="demo-rate">
  <view class="demo-rate__title">请点击评分</view>
  <!-- 带描述评分，设置属性：showText-->
  <t-rate value="{{value[1]}}" variant="filled" data-index="{{1}}" bind:change="onChange" showText="{{true}}" />
</view>

