<t-cell title="选择时间" hover note="{{text || ''}}" arrow bindtap="showPicker" t-class="pannel-item" />

<t-date-time-picker
  title="选择时间"
  visible="{{visible}}"
  value="{{value}}"
  format="HH:mm:ss"
  mode="{{['null', 'second']}}"
  steps="{{ { minute: 5 } }}"
  bindchange="onConfirm"
  bindpick="onColumnChange"
  bindcancel="hidePicker"
/>
