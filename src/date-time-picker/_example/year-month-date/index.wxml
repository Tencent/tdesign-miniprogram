<t-cell
  title="选择日期"
  hover
  note="{{dateText || ''}}"
  arrow
  data-mode="date"
  bindtap="showPicker"
  class="test"
  t-class="panel-item"
/>

<!-- 年月日 -->
<t-date-time-picker
  auto-close
  title="选择日期"
  visible="{{dateVisible}}"
  mode="date"
  default-value="{{date}}"
  format="YYYY-MM-DD"
  start="{{start}}"
  end="{{end}}"
  filter="{{filter}}"
  popup-props="{{popupProps}}"
  bindchange="onConfirm"
  bindpick="onColumnChange"
  bindcancel="hidePicker"
  bindclose="handleClose"
/>
