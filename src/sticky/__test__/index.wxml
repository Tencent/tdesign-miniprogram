<view class="demo tdesign-demo-sticky-base">
  <t-sticky id="base-sticky" style="{{style}}" customStyle="{{customStyle}}" bind:scroll="handleScroll">
    <t-button class="base-btn">基础吸顶 </t-button>
  </t-sticky>

  <t-sticky id="disabled-sticky" disabled="{{true}}" bind:scroll="handleScroll">
    <t-button class="base-btn">禁用吸顶 </t-button>
  </t-sticky>

  <t-sticky id="offset-top-sticky" offsetTop="{{100}}" bind:scroll="handleScroll">
    <t-button class="base-btn">offsetTop吸顶 </t-button>
  </t-sticky>

  <view class="wrapper">
    <t-sticky id="container-sticky" container="{{ container }}">
      <t-button class="container-btn">指定容器</t-button>
    </t-sticky>
  </view>
</view>
