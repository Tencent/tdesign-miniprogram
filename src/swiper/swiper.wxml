<wxs src="./swiper.wxs" module="swiper" />
<wxs src="../common/utils.wxs" module="_" />

<view class="{{prefix}}-class {{classPrefix}}" style="{{customStyle}}">
  <swiper
    autoplay="{{autoplay}}"
    current="{{current}}"
    interval="{{interval}}"
    duration="{{duration}}"
    circular="{{loop}}"
    vertical="{{direction == 'vertical'}}"
    easing-function="{{easingFunction}}"
    previous-margin="{{previousMargin}}"
    next-margin="{{nextMargin}}"
    snap-to-edge="{{snaoToEdge}}"
    display-multiple-items="{{displayMultipleItems}}"
    style="height: {{_.addUnit(height)}}"
    bindchange="onChange"
  >
    <swiper-item wx:for="{{list}}" wx:key="index" style="margin: 0 12px">
      <t-image
        class="{{classPrefix}}__image-host"
        t-class="{{prefix}}-class-image {{classPrefix}}__image"
        custom-style="height: {{_.addUnit(height)}}"
        src="{{item}}"
        shape="round"
      />
    </swiper-item>
  </swiper>
  <t-swiper-nav
    id="swiperNav"
    wx:if="{{_navigation}}"
    type="{{_navigation.type}}"
    minShowNum="{{_navigation.minShowNum}}"
    hasNavBtn="{{_navigation.hasNavBtn}}"
    bind:navBtnChange="onSwiperNavBtnChange"
  />
  <slot name="nav" />
</view>
