<view class="demo">
  <view class="demo-title">Rate 评分</view>
  <view class="demo-desc">用于对某行为/事物进行打分。</view>
  <t-demo title="01 类型">
    <view class="demo-section__desc">实心评分</view>
    <view class="item">
      <view class="item__title">请点击评分</view>
      <t-rate value="{{value[0]}}" data-index="{{0}}" variant="filled" />
    </view>

    <view class="demo-section__desc">空心评分</view>
    <view class="item">
      <view class="item__title">请点击评分</view>
      <t-rate value="{{value[1]}}" data-index="{{1}}" bind:change="onChange" />
    </view>

    <view class="demo-section__desc">自定义数量评分</view>
    <view class="item">
      <view class="item__title">自定义数量</view>
      <t-rate
        value="{{value[2]}}"
        data-index="{{2}}"
        variant="filled"
        count="{{6}}"
        bind:change="onChange"
      />
    </view>

    <view class="demo-section__desc">半星评分</view>
    <view class="item">
      <view class="item__title">半星评价</view>
      <t-rate
        value="{{value[3]}}"
        data-index="{{3}}"
        variant="filled"
        allowHalf="{{true}}"
        bind:change="onChange"
      />
    </view>

    <view class="demo-section__desc">带描述评分</view>
    <view class="item">
      <view class="item__title">请点击评分</view>
      <t-rate
        value="{{value[4]}}"
        data-index="{{4}}"
        bind:change="onChange"
        showText="{{true}}"
        texts="{{texts}}"
        variant="filled"
        size="{{32}}"
      />
    </view>
    <view class="item">
      <view class="item__title">请点击评分</view>
      <t-rate
        value="{{value[5]}}"
        variant="filled"
        data-index="{{5}}"
        bind:change="onChange"
        showText="{{true}}"
      />
    </view>
  </t-demo>
  <t-demo title="02 规格">
    <view class="demo-section__desc">评价规格</view>
    <view class="item">
      <view class="item__title">规格 20</view>
      <t-rate
        value="{{value[8]}}"
        data-index="{{8}}"
        variant="filled"
        bind:change="onChange"
        size="{{40}}"
      />
    </view>
    <view class="item">
      <view class="item__title">规格 16</view>
      <t-rate
        value="{{value[9]}}"
        data-index="{{9}}"
        variant="filled"
        bind:change="onChange"
        size="{{32}}"
      />
    </view>
  </t-demo>
</view>
