.t-float-left {
  float: left;
}
.t-float-right {
  float: right;
}
@keyframes tdesign-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.hotspot-expanded.relative {
  position: relative;
}
.hotspot-expanded::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: scale(1.5);
}
.t-swiper {
  position: relative;
  overflow: hidden;
  height: 300rpx;
}
.t-swiper__container {
  position: relative;
  width: 100%;
  height: 100%;
}
.t-swiper__container.t-in-animation {
  transition-property: transform;
}
.t-swiper__container.t-is-hidden {
  visibility: hidden;
  transition-property: none;
}
